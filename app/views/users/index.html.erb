<% provide(:title, 'All users') %>
<h1>All users</h1>

<%#= will_paginate %>

<ul class="users">
  <% @users.each do |user| %>
  <li>
    <%= gravatar_for user, size: 50 %>
    <%= link_to user.name, user %>
    <% if current_user?(user) %>
    <%= link_to "退会する", user, method: :delete,
                                  data: { confirm: "本当によろしいか？" } %>
    <% end %>
  </li>
  <% end %>
</ul>

<%#= will_paginate %>